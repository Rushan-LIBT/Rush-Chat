# MongoDB connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/rushchat?retryWrites=true&w=majority

# JWT secret for authentication (use a long random string)
JWT_SECRET=your-super-secret-jwt-key-here

# Node environment (development/production)
NODE_ENV=production

# Frontend URL (for CORS in production) - replace with your Render.com URL
FRONTEND_URL=https://your-app-name.onrender.com

# Port (Render.com will set this automatically)
PORT=5000